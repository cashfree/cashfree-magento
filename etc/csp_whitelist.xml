<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="cashfree_checkout" type="host">sdk.cashfree.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="cashfree_api" type="host">sandbox.cashfree.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="cashfree_logo" type="host">cashfreelogo.cashfree.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
